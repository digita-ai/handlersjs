{
    "compileOnSave": false,
    "include": [
        "lib"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "typeRoots": [
            "node_modules/@types"
        ],
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "importHelpers": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "target": "es2020",
        "module": "commonjs",
        "lib": [
            "es2020",
            "dom"
        ]
    }
}